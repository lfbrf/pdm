<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/txtNomeListaMedico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:text="Nome" />

    <TextView
        android:id="@+id/txtEnderecoListaMedico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/txtNomeListaMedico"
        android:layout_toRightOf="@+id/txtNomeListaMedico"
        android:text="Usuario" />

    <TextView
        android:id="@+id/txtEspecialidadeMedico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/txtEnderecoListaMedico"
        android:layout_toRightOf="@+id/txtEnderecoListaMedico"
        android:text="Cargo" />


</RelativeLayout>